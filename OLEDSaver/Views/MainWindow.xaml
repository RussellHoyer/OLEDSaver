<Window x:Class="OLEDSaver.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OLEDSaver"
        mc:Ignorable="d"
        Title="OLEDSaver" Height="450" Width="800"
        WindowStyle="SingleBorderWindow"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        KeyDown="Window_KeyDown"
        Name="MainWindowObject">
    <Grid Name="MainWindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label Margin="5" FontSize="20" Foreground="AliceBlue" HorizontalContentAlignment="Center">Key Bindings</Label>
            <Label Foreground="White">C - Close the application.</Label>
            <Label Foreground="White">D - Toggle UI</Label>
            <Label Foreground="White">F - Switch between full screen resolution size and current size.</Label>
            <Label Foreground="White">M - Maximize/restore the current window.</Label>
            <Label Foreground="White">S - Shift between the WindowStyles (disables top application bar).</Label>
        </StackPanel>
        
    </Grid>
</Window>
